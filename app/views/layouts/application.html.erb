<!DOCTYPE html>
<html>
<head>
  <title>Clonebook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<ul class='nav nav-pill'>
	<% if session[:id] == nil %>
	  	<li class="nav navbar-right"><%= link_to "Sign in", new_sessions_path%></li>
	<% end %>
	<% if session[:id] %>
		<li class="nav navbar-right"><%= link_to "Sign out", logout_path, method: :delete, data: {confirm: 'Are you sure you want to log out?'} %></li>
	<% end %>
</ul>

<%= yield %>

</body>
</html>
